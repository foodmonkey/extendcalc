// a helper function to build paths safely from strings rather than just concat

use std::path::PathBuf;

// safe path joining
// combines a base dir, optional sub-folder, and a filename
pub(crate) fn path_builder<Base: AsRef<str>, Folder: AsRef<str>>(
    base: Base,
    folder: Folder,
    file: &str,
) -> PathBuf {
    let mut path = PathBuf::from(base);
    if !folder.is_empty() {
        path.push(folder);
    }
    path.push(file);
    path.set_extension("ron"); // Enforce the file type here
    path
}
